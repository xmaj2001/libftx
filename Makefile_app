NAME		= libftcm.a

SRC				= ./libx/windows/*.c \
				  ./libx/windows/events/*.c \
				  ./libx/unity/*.c 
LIBFT			= ./libx/libft/*.c

MINILIBX				= ./libx/minilibx

		
FLAGS		= -Wall -Werror -Wextra

CP			= gcc

all:
	$(CP) -o app main.c $(LIBFT) $(SRC) -I ./includes -L$(MINILIBX) -lmlx -lXext -lX11 -lm